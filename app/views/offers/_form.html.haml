= simple_form_for @offer do |f|
  = f.input :comment
  %h3= t('offert.prodcts')
  -#= f.simple_fields_for :product_offers do |p|
  - @categories.each do |c|
    %p
      %strong= c.name
    = f.association :products, collection: @products.where(category_id: c.id), as: :check_boxes, label: false

  .form-actions
  = f.button :submit


